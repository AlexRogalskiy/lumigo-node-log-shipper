		"husky": "^1.1.1",
		"lint-staged": "^7.3.0",
		"mocha": "^5.2.0",
		"nock": "^10.0.2",
		"nyc": "^13.1.0",
		"prettier": "^1.14.3",
		"sinon": "^7.5.0",
		"zlib": "^1.0.5"
	},
	"husky": {
		"hooks": {
