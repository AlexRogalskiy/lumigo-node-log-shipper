{
	"name": "@lumigo/lumigo-log-shipper",
	"version": "1.0.0",
	"description": "Lumigo Node.js Log Shipper",
	"main": "src/index.js",
	"scripts": {
		"test": "nyc mocha --timeout=10000 --recursive",
